<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sumpah.Controller">
    <Text text="KamusKu">
        <font>
            <Font size="40.0" />
        </font>
    </Text>

    <Text text="Cari kata" />
    <TextField fx:id="searchField" promptText="Masukkan kata..." />

    <HBox alignment="CENTER" spacing="10">
        <CheckBox fx:id="indToEngCheckBox" onAction="#setIndoToEng" text="Indo → Eng" />
        <CheckBox fx:id="engToIndCheckBox" onAction="#setEngToInd" text="Eng → Indo" />
    </HBox>

    <Button fx:id="searchButton" onAction="#searchWord" text="Cari" />
    <TextArea fx:id="resultArea" editable="false" />

    <!-- Area untuk Gimik Gambar -->
    <ImageView fx:id="imageView" fitWidth="200" fitHeight="200" preserveRatio="true" />
</VBox>
